<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_join"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splashBackground"
    tools:context="com.dbdbdeep.modoostar.JoinActivity">

    <ImageView
        android:layout_width="273.50dp"
        android:layout_height="112.50dp"
        app:srcCompat="@drawable/splash_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112.50dp"
        android:id="@+id/imageView" />

    <RadioGroup
        android:id="@+id/rgGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35.00dp">

        <RadioButton
            android:layout_width="118.50dp"
            android:layout_height="41.50dp"
            android:id="@+id/rdGenderF"
            android:button="@drawable/join_gender_girl"
            android:layout_marginRight="14.00dp" />

        <RadioButton
            android:layout_width="118.50dp"
            android:layout_height="41.50dp"
            android:id="@+id/rdGenderM"
            android:button="@drawable/join_gender_boy" />
    </RadioGroup>

    <TextView
        android:text="닉네임"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_below="@+id/rgGender"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="29.50dp"
        android:layout_marginLeft="74.50dp" />

    <EditText
        android:layout_width="136.50dp"
        android:layout_height="37.50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etNickname"
        android:background="@drawable/edittext_round"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:layout_below="@+id/rgGender"
        android:layout_alignParentRight="true"
        android:layout_marginTop="23.00dp"
        android:layout_marginRight="75.50dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="182.50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp">

        <CheckBox
            android:text="서비스 이용 약관"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbTerms1"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:buttonTint="#ffffff" />

        <Button
            android:layout_width="13dp"
            android:layout_height="12.5dp"
            android:background="@drawable/join_btn_arrow"
            android:id="@+id/btnArrow1" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="182.50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="0dp">

        <CheckBox
            android:text="서비스 이용 약관"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbTerms2"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:buttonTint="#ffffff" />

        <Button
            android:layout_width="13dp"
            android:layout_height="12.5dp"
            android:background="@drawable/join_btn_arrow"
            android:id="@+id/btnArrow2" />

    </LinearLayout>

    <Button
        android:layout_width="163.50dp"
        android:layout_height="41.50dp"
        android:id="@+id/btStart"
        android:background="@drawable/join_btn_start"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="20dp" />


</RelativeLayout>
