<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 눌러진 경우 효과 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ffff00" />
            <stroke android:width="1dp" android:color="@color/splashBackground" />
            <corners android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <!-- 평상시 효과 -->
    <item>
        <shape>
            <solid android:color="#ffffff" />
            <stroke android:width="1dp" android:color="@color/splashBackground" />
            <corners android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>

</selector>