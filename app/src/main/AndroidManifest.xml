<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dbdbdeep.modoostar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 인트로 + 로그인 화면 -->
        <activity
            android:name=".SplashActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 가입화면 -->
        <activity
            android:name=".JoinActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <!-- 메인화면 -->
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name=".WebViewActivity" />
        <activity android:name=".JoinBenefitActivity" />
        <activity android:name=".CpThemeSpecialActivity" />
        <activity android:name=".CpThemeEventActivity" />
        <activity android:name=".CpThemeGeneralActivity" />
        <activity android:name=".ModelRankingActivity"></activity>
    </application>

</manifest>